<p id="notice"><%= notice %></p>

<h1>Adjustments</h1>

<table>
  <thead>
    <tr>
      <th>Personal information</th>
      <th>Adjustment type</th>
      <th>Count</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adjustments.each do |adjustment| %>
      <tr>
        <td><%= adjustment.personal_information_id %></td>
        <td><%= adjustment.adjustment_type_id %></td>
        <td><%= adjustment.count %></td>
        <td><%= adjustment.date %></td>
        <td><%= link_to 'Show', adjustment %></td>
        <td><%= link_to 'Edit', edit_adjustment_path(adjustment) %></td>
        <td><%= link_to 'Destroy', adjustment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

