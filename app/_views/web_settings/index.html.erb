                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">使用者</h4>
                                <p class="category">Here is a "使用者" table</p>
                            </div>
                            <div class="content table-responsive table-full-width">
                                <table class="table table-hover table-striped">
                                    <thead>
                                      <th>使用者 ID</th>
                                    	<th>使用者 PW</th>
                                      <th></th>
                                      <th></th>
                                  </thead>
                                    <tbody>
																			<% @logins.each do |login|
                                      %>
                                        <tr>
                                          <td><%= login.user_id %></td>
                                          <td><%= login.user_pw %></td>
                                          <td><%= link_to 'Edit', edit_login_path(login) %></td>
                                          <td><%= link_to 'Destroy', login, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                        </tr>
																			<% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <%= link_to new_login_path, method: :get do %>
                        <button class="btn btn-default pull-right" >New User</button>
                        <% end %>
                        <br /><br /><br /><br />
                    </div>
                  -->

                </div>
            </div>
        </div>

        <footer class="footer">
            <div class="container-fluid">
                <nav class="pull-left">
                    <ul>
                        <li>
                            <%= link_to "/admin/setting", method: :get  do %>
                                設定
                            <% end %>
                        </li>
                    </ul>
                </nav>
                <p class="copyright pull-right">
                    &copy; <script>document.write(new Date().getFullYear())</script> <a href="http://www.creative-tim.com">Creative Tim</a>, made with love for a better web
                </p>
            </div>
        </footer>


    </div>
</div>


</body>
