    <style>
        body {
            background: #f8f8f8;
            display: flex;
            justify-content: center;
            /* align horizontal */
            align-items: center;
            /* align vertical */
        }

        .content {
            width: 100%;
            height: 100%;
        }

        .login-box {
            width: 500px;
            height: 300px;
        }
    </style>

    <script>
      function login(){
        if(document.getElementById("username").value == "admin"){
          if(document.getElementById("password").value == "1234"){
            window.location.href = "/admin/personal";
          }
          else{
            alert("passwordが間違っています。");
          }
        }
        else{
          alert("idが間違っています。");
        }
      }
    </script>
</head>

<body>

    <div class="content d-flex align-items-center">
        <div class="container-fluid">
            <div class="text-center">
                <h2>##Login##</h2>
                <hr width="500px" height="300px">
            </div>
            <div class="login-box well center-block">
                <form accept-charset="UTF-8" role="form" method="get" action="">
                    <legend>Login</legend>
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input name="user_id" value='' id="username" placeholder="Username" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input name="password" id="password" value='' placeholder="Password" type="password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="button" class="btn btn-default btn-login-submit btn-block m-t-md" value="Login" onClick="login();"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>


</body>

