<!doctype html>
<html lang="en">
<head>
  <title>給与管理システム</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag  'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <div class="sidebar" data-color="purple" data-image="assets/img/sidebar-5.jpg">
  <!--   you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple" -->
    <div class="sidebar-wrapper">
          <div class="logo">
              <a href="http://www.creative-tim.com" class="simple-text">
                  賃金管理者
              </a>
          </div>

          <ul class="nav">
              <li>
                <%= link_to "/admin/personal", method: :get  do %>
                      <i class="pe-7s-user"></i>
                      <p>身分管理</p>
                  </a>
                <% end %>
              </li>
              <li class="active">
                <%= link_to "/admin/wage", method: :get  do %>
                      <i class="pe-7s-news-paper"></i>
                      <p>給与管理</p>
                <% end %>
              </li>
              <li>
                <%= link_to "/admin/history", method: :get  do %>
                      <i class="pe-7s-note2"></i>
                      <p>履歴管理</p>
                  </a>
                <% end %>
              </li>

              <li class="active-pro">
                <%= link_to "/admin/setting", method: :get  do %>
                      <i class="pe-7s-science"></i>
                      <p>設定</p>
                  </a>
                <% end %>
              </li>
          </ul>
    </div>
  </div>

  <div class="wrapper">
      <div class="main-panel">
      		<nav class="navbar navbar-default navbar-fixed">
              <div class="container-fluid">
                  <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </button>
                      <a class="navbar-brand">給与管理</a>
                  </div>
              </div>
          </nav>
          <footer class="footer">
              <div class="container-fluid">
                  <nav class="pull-left">
                      <ul>
                          <li>
                              <%= link_to "/admin/wage/wage_management", method: :get  do %>
                                  給与管理
                              <% end %>
                          </li>
                          <li>
                              <%= link_to "/admin/wage/age_info", method: :get  do %>
                                  年齢情報
                              <% end %>
                          </li>
                          <li>
                              <%= link_to "/admin/wage/adjustment_values_info", method: :get  do %>
                                  調整価格情報
                              <% end %>
                          </li>
                      </ul>
                  </nav>
              </div>
          </footer>
          <div class="content">
              <div class="container-fluid">
                  <div class="row">
                      <div class="col-md-12">
                          <div class="card">
                              <div class="header">
                                  <h4 class="title">調整タイプ</h4>
                                  <p class="category">Here is a master table. 追加、修正は設定のテーブルでできます。</p>
                              </div>
                              <div class="content table-responsive table-full-width">
                                  <table class="table table-hover table-striped">
                                      <thead>
                                        <th>調整可能な値名</th>
                                        <th>名別調整値</th>
                                        <th>調整値の理由</th>
                                      </thead>
                                      <tbody>
                                        <% @adjustment_types.each do |adjustment_type|
                                        %>
                                          <tr>
                                            <td><%= adjustment_type.name %></td>
                                            <td><%= adjustment_type.value %></td>
                                            <td><%= adjustment_type.hint %></td>
                                          </tr>
                                        <% end %>
                                      </tbody>
                                  </table>
                              </div>
                          </div>
                      </div>

                      <div class="col-md-12">
                          <div class="card card-plain">
                              <div class="header">
                                  <h4 class="title">調整値</h4>
                                  <p class="category">Here is a "調整値" table</p>
                              </div>
                              <div class="content table-responsive table-full-width">
                                  <table class="table table-hover">
                                      <thead>
                                        <th>社員の名</th>
                                        <th>調整可能な値名</th>
                                        <th>調整値の数</th>
                                        <th>データ作成月</th>
                                        <th></th>
                                      </thead>
                                      <tbody>
                                        <% @adjustments.each do |adjustment|
                                        %>
                                          <tr>
                                            <td><%= 'employee_name' %></td>
                                            <td><%= adjustment.adjustment_type.name %></td>
                                            <td><%= adjustment.count %></td>
                                            <td><%= adjustment.created_at.strftime('%Y-%m-%d') %></td>
                                            <td><%= link_to 'Edit', edit_adjustment_path(adjustment) %></td>
                                          </tr>
                                        <% end %>
                                      </tbody>
                                  </table>
                              </div>
                          </div>
                          <%= link_to new_adjustment_path, method: :get do %>
                          <button class="btn btn-default pull-right" >New Employee Adjustment</button>
                          <% end %>
                      </div>

                  </div>
              </div>
          </div>
          <footer class="footer">
              <div class="container-fluid">
                  <p class="copyright pull-right">
                      &copy; <script>document.write(new Date().getFullYear())</script> <a href="http://www.creative-tim.com">Creative Tim</a>, made with love for a better web
                  </p>
              </div>
          </footer>


      </div>
  </div>


</body>
<!--   Core JS Files   -->
<script src="assets/js/jquery.3.2.1.min.js" type="text/javascript"></script>
<script src="assets/js/bootstrap.min.js" type="text/javascript"></script>

<!--  Charts Plugin -->
<script src="assets/js/chartist.min.js"></script>

<!--  Notifications Plugin    -->
<script src="assets/js/bootstrap-notify.js"></script>

<!--  Google Maps Plugin    -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js key=YOUR_KEY_HERE"></script>

<!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
<script src="assets/js/light-bootstrap-dashboard.js?v=1.4.0"></script>

<!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
<script src="assets/js/demo.js"></script>


</html>
