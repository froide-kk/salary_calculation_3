<p id="notice"><%= notice %></p>

<h1>Age Adjustments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @age_adjustments.each do |age_adjustment| %>
      <tr>
        <td><%= age_adjustment.name %></td>
        <td><%= age_adjustment.value %></td>
        <td><%= link_to 'Show', age_adjustment %></td>
        <td><%= link_to 'Edit', edit_age_adjustment_path(age_adjustment) %></td>
        <td><%= link_to 'Destroy', age_adjustment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

