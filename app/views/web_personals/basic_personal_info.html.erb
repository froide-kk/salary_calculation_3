                        <p>身分管理</p>
                    </a>
                  <% end %>
                </li>
                <li>
                  <%= link_to "/admin/wage", method: :get  do %>
                        <i class="pe-7s-news-paper"></i>
                        <p>給与管理</p>
                  <% end %>
                </li>
                <li>
                  <%= link_to "/admin/history", method: :get  do %>
                        <i class="pe-7s-note2"></i>
                        <p>履歴管理</p>
                    </a>
                  <% end %>
                </li>

                <li class="active-pro">
